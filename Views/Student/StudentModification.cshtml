
@model Student

<html>
<head>
</head>
<body>
	<div class="container">
	

		<form method="post" action="/Student/SaveChanges">

			<label for="id">StudentId: </label>
			<br>
			<input type="text" name="StudetId" id="id" value="@Model.StudetId" readonly></input>

			<br><br>

			<label for="name">StudentName:  </label>
			<br>
			<input type="text" name="StdName" id="name" value="@Model.StdName"></input>
			<br><br>

			<label for="phone">StudentPhone:  </label>
			<br>
			<input type="text" name="StdPhone" id="phone" value="@Model.StdPhone"></input>
			<br><br>

			<label for="address">StudentAddress: </label>
			<br>
			<input type="text" name="StdAddress" id="address" value="@Model.StdAddress"></input>
			<br><br>


			<input type="submit" class="a"></input>
		</form>
	</div>
</body>
</html>









